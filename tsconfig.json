{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@utils/*": [
        "utils/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "admin-ui"
  ],
  "exclude": [
    "node_modules",
    "migration.ts"
  ],
  "ts-node": {
    "files": true
  }
}