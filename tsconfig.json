{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "graphql-upload"]
  },
  "exclude": ["node_modules", "migration.ts", "__admin-ui"],
  "include": ["src/**/*.ts"],
  "ts-node": {
    "files": true
  }
}
