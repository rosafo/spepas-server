{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "graphql-upload"]
  },
  "exclude": [
    "node_modules",
    "migration.ts",
    "src/plugins/**/ui/*",
    "src/admin-ui"
  ],

  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "ts-node": {
    "files": true
  }
}
